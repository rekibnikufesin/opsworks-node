{
    "apps": [
        {
            "name"        : "app",
            "instances"   : 0,
            "exec_mode"   : "cluster_mode",
            "script"      : "start.js",
            "node_args"   : ["--max-old-space-size=4096"],
            "cwd"         : "/srv/www/app/current/",
            "merge_logs"  : true,
            "error_file"  : "/srv/www/app/current/log/out.log",
            "out_file"    : "/srv/www/app/current/log/out.log",
            "env"         : {
              app['environment'], <%= @env_var %>
            }
        }
    ]
}
